<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accessibility_navigation"
    app:startDestination="@id/login_fragment">

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.example.retrofitTaskManager.ui.accessibility.login.LoginFragment"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/to_sign_up_fragment_action"
            app:destination="@id/sign_up_fragment"/>
    </fragment>


    <fragment
        android:id="@+id/sign_up_fragment"
        android:name="com.example.retrofitTaskManager.ui.accessibility.signUp.SignUpFragment"
        tools:layout="@layout/sign_up_fragment" />
</navigation>